<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context="com.example.alberth.appstopinfraction.presenter.home.HomeActivity">


    <TextView
        android:id="@+id/android_textview_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:gravity="center"
        android:text="Multas de transito"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="generar papeleta"
        android:textSize="18sp"
        android:background="@drawable/border_botton"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_consultar_infraccion"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/border_botton"
        android:layout_marginTop="16dp"
        android:text="Consultar"

        android:textSize="18sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_listar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_botton"
        android:text="historial de papeletas"
        android:textSize="18sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_list_des_infraction"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_botton"
        android:text="Descripcion de papeletas"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
